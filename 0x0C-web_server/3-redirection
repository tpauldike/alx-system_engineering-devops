#!/usr/bin/env bash
# Install the web server 'nginx' on the server and perform some configurations
sudo apt-get update -y
sudo apt-get upgrade -y
sudo apt-get install nginx -y
ufw allow 'Nginx HTTP'
echo "Hello World!" > /var/www/html/index.html

new_website=\
"server {
        listen 80;
        listen [::]:80;
        
        root /var/www/html;
        index index.html index.htm index.nginx-debian.html;
        server_name tmaworldwide.tech;
        location / {
                try_files \$uri \$uri/ =404;
        }

        error_page   404  =  /404.html;
        
        if (\$request_filename ~ redirect_me){
            rewrite ^ https://www.youtube.com/@tpauldike permanent;
        }
}
"
echo "$new_website" > /etc/nginx/sites-available/new_website
if [ "$(pgrep nginx)" -le 0 ];
then
    service nginx start
else
    service nginx restart
fi;
